@model SWD_SoftwareArchitecture.DTOs.EnrollmentDto
@{
    ViewData["Title"] = "Delete Enrollment";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2>Delete Enrollment</h2>

            <div class="alert alert-warning">
                <strong>Are you sure you want to delete this enrollment?</strong>
            </div>

            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Student Name:</dt>
                        <dd class="col-sm-8">@Model.StudentName</dd>

                        <dt class="col-sm-4">Course:</dt>
                        <dd class="col-sm-8">@Model.CourseTitle</dd>

                        <dt class="col-sm-4">Enrollment Date:</dt>
                        <dd class="col-sm-8">@Model.EnrollmentDate.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">@Model.Status</dd>

                        <dt class="col-sm-4">Progress:</dt>
                        <dd class="col-sm-8">@Model.ProgressPercent%</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="EnrollmentId" />
                        <input type="hidden" asp-for="CourseId" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Manage" asp-route-courseId="@Model.CourseId" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

