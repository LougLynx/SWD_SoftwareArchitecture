@model IEnumerable<SWD_SoftwareArchitecture.DTOs.EnrollmentListDto>
@{
    ViewData["Title"] = "Manage Enrollments";
    var courseId = ViewBag.CourseId as int?;
    var courseTitle = ViewBag.CourseTitle as string ?? "Unknown Course";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-12">
            <h2>Manage Enrollments</h2>
            <p class="text-muted">Course: <strong>@courseTitle</strong></p>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="col-md-12">
            <a asp-action="Create" asp-route-courseId="@courseId" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Enrollment
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Enrollment List</h5>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Student Name</th>
                                    <th>Student Email</th>
                                    <th>Enrollment Date</th>
                                    <th>Status</th>
                                    <th>Progress (%)</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var enrollment in Model)
                                {
                                    <tr>
                                        <td>@enrollment.StudentName</td>
                                        <td>@enrollment.StudentEmail</td>
                                        <td>@enrollment.EnrollmentDate.ToString("yyyy-MM-dd")</td>
                                        <td>
                                            <span class="badge bg-@(enrollment.Status == "Active" ? "success" : enrollment.Status == "Completed" ? "primary" : "secondary")">
                                                @enrollment.Status
                                            </span>
                                        </td>
                                        <td>
                                            <div class="progress" style="height: 20px;">
                                                <div class="progress-bar" role="progressbar" style="width: @enrollment.ProgressPercent%" 
                                                     aria-valuenow="@enrollment.ProgressPercent" aria-valuemin="0" aria-valuemax="100">
                                                    @enrollment.ProgressPercent%
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@enrollment.EnrollmentId" class="btn btn-sm btn-info">View</a>
                                                <a asp-action="Edit" asp-route-id="@enrollment.EnrollmentId" class="btn btn-sm btn-warning">Edit</a>
                                                <a asp-action="Delete" asp-route-id="@enrollment.EnrollmentId" class="btn btn-sm btn-danger">Delete</a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            No enrollments found for this course.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}

