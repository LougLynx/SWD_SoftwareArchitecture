@model SWD_SoftwareArchitecture.DTOs.EnrollmentDto
@{
    ViewData["Title"] = "Enrollment Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2>Enrollment Details</h2>

            <div class="card">
                <div class="card-header">
                    <h5>Enrollment Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Enrollment ID:</dt>
                        <dd class="col-sm-8">@Model.EnrollmentId</dd>

                        <dt class="col-sm-4">Student Name:</dt>
                        <dd class="col-sm-8">@Model.StudentName</dd>

                        <dt class="col-sm-4">Course:</dt>
                        <dd class="col-sm-8">@Model.CourseTitle</dd>

                        <dt class="col-sm-4">Enrollment Date:</dt>
                        <dd class="col-sm-8">@Model.EnrollmentDate.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-@(Model.Status == "Active" ? "success" : Model.Status == "Completed" ? "primary" : "secondary")">
                                @Model.Status
                            </span>
                        </dd>

                        <dt class="col-sm-4">Progress:</dt>
                        <dd class="col-sm-8">
                            <div class="progress" style="height: 25px;">
                                <div class="progress-bar" role="progressbar" style="width: @Model.ProgressPercent%" 
                                     aria-valuenow="@Model.ProgressPercent" aria-valuemin="0" aria-valuemax="100">
                                    @Model.ProgressPercent%
                                </div>
                            </div>
                        </dd>
                    </dl>

                    <div class="mt-3">
                        <a asp-action="Edit" asp-route-id="@Model.EnrollmentId" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@Model.EnrollmentId" class="btn btn-danger">Delete</a>
                        <a asp-action="Manage" asp-route-courseId="@Model.CourseId" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

