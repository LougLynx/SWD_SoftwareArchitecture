@model IEnumerable<SWD_SoftwareArchitecture.DTOs.SubmissionListDto>
@{
    ViewData["Title"] = "Grade Submissions";
    var assignmentId = ViewBag.AssignmentId as int?;
    var assignmentTitle = ViewBag.AssignmentTitle as string ?? "Unknown Assignment";
    var maxScore = ViewBag.MaxScore as double? ?? 0;
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-12">
            <h2>Grade Submissions</h2>
            <p class="text-muted">Assignment: <strong>@assignmentTitle</strong> (Max Score: @maxScore)</p>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Student Submissions</h5>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Student Name</th>
                                    <th>Student Email</th>
                                    <th>Submitted At</th>
                                    <th>Grade</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var submission in Model)
                                {
                                    <tr>
                                        <td>@submission.StudentName</td>
                                        <td>@submission.StudentEmail</td>
                                        <td>@submission.SubmittedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                        <td>
                                            @if (submission.Grade.HasValue)
                                            {
                                                <strong>@submission.Grade / @submission.MaxScore</strong>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not graded</span>
                                            }
                                        </td>
                                        <td>
                                            @if (submission.IsGraded)
                                            {
                                                <span class="badge bg-success">Graded</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">Pending</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="View" asp-route-id="@submission.SubmissionId" class="btn btn-sm btn-info">View</a>
                                                <a asp-action="Grade" asp-route-id="@submission.SubmissionId" class="btn btn-sm btn-primary">
                                                    @(submission.IsGraded ? "Re-grade" : "Grade")
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            No submissions found for this assignment.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}

