@model SWD_SoftwareArchitecture.DTOs.GradeSubmissionDto
@{
    ViewData["Title"] = "Grade Submission";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h2>Grade Submission</h2>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card mb-3">
                <div class="card-header">
                    <h5>Submission Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Student:</dt>
                        <dd class="col-sm-8">@Model.StudentName</dd>

                        <dt class="col-sm-4">Assignment:</dt>
                        <dd class="col-sm-8">@Model.AssignmentTitle</dd>

                        <dt class="col-sm-4">Submitted At:</dt>
                        <dd class="col-sm-8">@Model.SubmittedAt.ToString("yyyy-MM-dd HH:mm")</dd>

                        <dt class="col-sm-4">Max Score:</dt>
                        <dd class="col-sm-8">@Model.MaxScore</dd>
                    </dl>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5>Enter Grade and Feedback</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Grade" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="SubmissionId" />
                        <input type="hidden" asp-for="AssignmentId" />
                        <input type="hidden" asp-for="UserId" />

                        <div class="form-group mb-3">
                            <label asp-for="Grade" class="form-label"></label>
                            <input asp-for="Grade" class="form-control" type="number" step="0.01" min="0" max="@Model.MaxScore" required />
                            <small class="form-text text-muted">Enter a score between 0 and @Model.MaxScore</small>
                            <span asp-validation-for="Grade" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Feedback" class="form-label"></label>
                            <textarea asp-for="Feedback" class="form-control" rows="5" maxlength="1000"></textarea>
                            <small class="form-text text-muted">Maximum 1000 characters</small>
                            <span asp-validation-for="Feedback" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Save Grade</button>
                            <a asp-action="Index" asp-route-assignmentId="@Model.AssignmentId" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

