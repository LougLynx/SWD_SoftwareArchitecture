@model IEnumerable<SWD_SoftwareArchitecture.Models.Assignment>
@{
    ViewData["Title"] = "Select Assignment for Grading";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-12">
            <h2>Grade Submissions</h2>
            <p class="text-muted">Select an assignment to grade submissions</p>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Available Assignments</h5>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Assignment Title</th>
                                    <th>Course</th>
                                    <th>Due Date</th>
                                    <th>Max Score</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var assignment in Model)
                                {
                                    <tr>
                                        <td>@assignment.Title</td>
                                        <td>
                                            @if (assignment.Course != null)
                                            {
                                                @assignment.Course.Title
                                            }
                                            else
                                            {
                                                <span class="text-muted">Unknown (CourseId: @assignment.CourseId)</span>
                                            }
                                        </td>
                                        <td>@assignment.DueDate.ToString("yyyy-MM-dd")</td>
                                        <td>@assignment.MaxScore</td>
                                        <td>
                                            <a asp-action="Index" asp-route-assignmentId="@assignment.AssignmentId" class="btn btn-primary btn-sm">
                                                View Submissions
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            No assignments available. Please create an assignment first.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}

